{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "target",
        "buildCommand": "mvn clean package -DskipTests"
      }
    },
    {
      "src": "api/**/*.java",
      "use": "@vercel/java"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.java"
    }
  ],
  "functions": {
    "api/index.java": {
      "maxDuration": 60
    }
  }
}